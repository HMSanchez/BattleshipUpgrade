<UserControl x:Class="Battleship.LeaderBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleship"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250">

    <StackPanel Width="265" Margin="10 10 10 10">
        <Label Content="Scores" HorizontalAlignment="Center" FontFamily="Stencil" FontSize="14.667"/>

        <ScrollViewer Height="150">
            <DataGrid x:Name="ScoresGrid" GridLinesVisibility="Horizontal" IsReadOnly="True" />
        </ScrollViewer>

        <StackPanel VerticalAlignment="Bottom">
            <Button Content="Clear scores" Click="btnClear_Click" Margin="5" BorderBrush="Black" Background="#FF5284C0" Foreground="White" FontFamily="Stencil" FontSize="14.667"/>
        </StackPanel>
    </StackPanel>
</UserControl>
